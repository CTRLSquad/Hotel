<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Hotel.Views.LoginForm"
        Title="Вход | Гостиница Адский Рай">
    <StackPanel VerticalAlignment="Center" Margin="10">
      <TextBlock HorizontalAlignment="Center" Foreground="Red" FontSize="30" Margin="0,0,0,20" Text="{Binding Message}"></TextBlock>
      <TextBlock Text="Введите логин:" FontWeight="Bold"/>
      <TextBox Text="{Binding Login}" Margin="0,0,0,10"/>

      <TextBlock Text="Введите пароль:" FontWeight="Bold"/>
      <TextBox Text="{Binding Password}"/>
      <Button HorizontalAlignment="Center" Margin="10" FontSize="18" Content="Войти" Command="{Binding Auth}"/>
    </StackPanel>
</Window>
