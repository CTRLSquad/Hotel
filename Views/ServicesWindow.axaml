<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Hotel.Views.ServicesWindow"
        Title="Список услуг | Гостиница Адский Рай">
  <StackPanel>
    <StackPanel Orientation="Horizontal">
      <Button Margin="5" Content="Создать" DockPanel.Dock="Bottom" Command="{Binding OpenEdit}"></Button>
      <Button Margin="5" Content="Изменить" DockPanel.Dock="Bottom" Command="{Binding OpenEdit}"></Button>
      <Button Margin="5" Content="Сохранить" DockPanel.Dock="Bottom" Command="{Binding OpenEdit}"></Button>
      <Button Margin="5" Content="Удалить" DockPanel.Dock="Bottom" Command="{Binding OpenEdit}"></Button>
    </StackPanel>
    <ListBox Items="{Binding Services}" DockPanel.Dock="Top">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="Услуга: "></TextBlock>
            <TextBlock Margin="1,0,0,0" Text="{Binding Name}"></TextBlock>
            <TextBlock Margin="5,0,0,0" Text="| Цена: "></TextBlock>
            <TextBlock Margin="1,0,0,0" Text="{Binding PriceTry}"></TextBlock>
           
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </StackPanel>
</Window>
